@model IEnumerable<KutuphaneMvc.Classes.Tur>

@{
    ViewData["Title"] = "Türler";
}

<h1>Tür Listesi</h1>

<p>
    <a asp-action="Ekle">Yeni Tür Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td class="text-end">
                    <a class="btn btn-primary" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-info" asp-action="Detaylar" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>