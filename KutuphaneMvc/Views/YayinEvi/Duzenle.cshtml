@model KutuphaneMvc.Classes.YayinEvi

@{
    ViewData["Title"] = "Yayın Evi Düzenle";
}

<h1 class="text-center text-uppercase">Yayın Evi Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-6 pb-3">
        <form asp-action="Duzenle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ad" class="form-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="form-label"></label>
                <textarea asp-for="Adres" class="form-control"></textarea>
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KurulusYili" class="form-label"></label>
                <input asp-for="KurulusYili" class="form-control" />
                <span asp-validation-for="KurulusYili" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="form-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="form-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
