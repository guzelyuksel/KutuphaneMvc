@model IEnumerable<KutuphaneMvc.Classes.YayinEvi>

@{
    ViewData["Title"] = "Yayın Evleri";
}

<h1 class="text-center text-uppercase">Yayın Evi Listesi</h1>

<p class="text-center">
    <a class="btn btn-light btn-outline-primary" asp-action="Ekle">Yeni Yayın Evi Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KurulusYili)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                Toplam Yazar Sayısı
            </th>
            <th>
                Toplam Kitap Sayısı
            </th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KurulusYili)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @{
                        var toplamYazar = item.Yazarlar?.Count();
                        if(toplamYazar == 0)
                        {
                            <p>Yazar yok</p>
                        }
                        else
                        {
                            <p>@toplamYazar adet yazar</p>
                        }
                    }
                </td>
                <td>
                    @{
                        var toplamKitap = item.Kitaplar?.Count();
                        if(toplamKitap == 0)
                        {
                            <p>Kitap yok</p>
                        }
                        else
                        {
                            <p>@toplamKitap adet kitap</p>
                        }
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-primary" asp-action="Duzenle" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-info" asp-action="Detaylar" asp-route-id="@item.Id">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Sil" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
