@model IEnumerable<KutuphaneMvc.Classes.Kitap>

@{
    ViewData["Title"] = "Kitaplar";
}

<h1 class="text-center text-uppercase">Kitap Listesi</h1>

<p class="text-center">
    <a class="btn btn-light btn-outline-primary" asp-action="Ekle">Yeni Kitap Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasimYili)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasimSayisi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SayfaSayisi)
            </th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasimYili)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasimSayisi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SayfaSayisi)
                </td>
                <td class="text-end">
                    <a class="btn btn-primary" asp-action="Duzenle" asp-route-id="@item.Isbn">Düzenle</a>
                    <a class="btn btn-info" asp-action="Detaylar" asp-route-id="@item.Isbn">Detaylar</a>
                    <a class="btn btn-danger" asp-action="Sil" asp-route-id="@item.Isbn">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
